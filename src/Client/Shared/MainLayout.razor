@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="_isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit"
            Link="https://github.com/obaki102/Obaki.Toolkit" Target="_blank" />
    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Never" Elevation="1" Variant="@DrawerVariant.Mini"
        OpenMiniOnHover="true">
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Code" class="my-6"
                IconColor="Color.Tertiary" Href="">
                <MudText Typo="Typo.h2"> Obaki.Toolkit</MudText>
            </MudNavLink>
            <MudDivider class="my-6" />
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.FormatShapes" class="my-2"
                IconColor="Color.Tertiary" Href="XmlAutoEscaper" Text="Xml AutoEscaper">
                Xml AutoEscaper
            </MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Timer" class="my-2"
                IconColor="Color.Tertiary" Href="d4-timer" Text="D4 Timer">
                D4  Timer
            </MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme _theme = DefaultTheme.ApplyTheme();
    private bool _isDarkMode = true;
    bool _drawerOpen = false;
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}